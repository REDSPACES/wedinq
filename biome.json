{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "root": true,
  "files": {
    "includes": ["**/*", "!.next", "!node_modules", "!out", "!build"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "globals": ["React", "JSX"]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
